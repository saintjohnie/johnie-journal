<%- include("partials/header"); -%>
<h1>Edit</h1>
<p><%= startingContent %></p>

<% posts.forEach(function(post){ %>
<form action="delete" method="post">
  <div class="list-group">
    <h1 class="list-group-item d-flex justify-content-between align-items-center">
        <%= post.title %>
        <span class="badge badge-danger ">
        <input type="checkbox" name="remove"" onchange=" this.form.submit()" value=<%=post._id%>>
        </span>
    </h1>
  </div>
</form>
<% }) %> <%- include("partials/footer"); -%>
